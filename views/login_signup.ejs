      const loginBtn = document.querySelector(".loginShow")
      loginBtn.addEventListener('click', function(event){
        const signUpDiv = document.querySelector(".signUpShow")
        const loginDiv = document.querySelector(".loginShow")
        signUpDiv.classList.toggle("hidden");
        loginDiv.clasList.toggle("hidden");

      })

    }
