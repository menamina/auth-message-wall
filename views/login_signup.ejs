<html>
  <head>
    <link rel="stylesheet" href="../css/loginSignup.css" />
  </head>
  <body>
    <div class="mainDiv">
      <div class="login">
        <h1 class="welcome">welcome back!</h1>
        <div class="form">
          <form action="/login" method="POST">
            <input
              class="email"
              name="email"
              type="email"
              required
              placeholder="email"
            />
            <input
              class="password"
              name="password"
              type="password"
              required
              placeholder="password"
            />
            <button class="btn log">LOGIN</button>
            <div class="forgotPass">Forgot your password?</div>
          </form>
        </div>
      </div>

      <div class="signUp">
        <h1 class="dontAlrd">Don't already have an account?</h1>
        <button class="btn sign" type="button" onclick="showSignUp()">
          SIGN UP!
        </button>
      </div>

      <div class="loginShow hidden">
        <h1 class="alrdHave">Already have an account?</h1>
        <button class="loginBtnFromSignUp" type="button" onclick="showLogin()">
          LOGIN
        </button>
      </div>

      <div class="signUpShow hidden">
        <form class="formsignUp" action="/signup" method="POST">
          <div class="signUpDiv">
            <div class="pSignUp">Sign up</div>

            <label for="firstName" hidden>First name</label>
            <input
              class="name"
              name="fName"
              placeholder="First name"
              required
            />

            <label for="username" hidden>Username</label>
            <input
              class="username"
              name="username"
              placeholder="Username"
              required
            />

            <label for="email" hidden>Email</label>
            <input
              class="email"
              name="email"
              type="email"
              placeholder="Email"
              required
            />

            <label for="password" hidden>Password</label>
            <input
              required
              type="password"
              class="password"
              name="password"
              placeholder="Password"
            />

            <label for="confirmPassword" hidden>Confirm password</label>
            <input
              type="password"
              class="confirmPassword"
              name="confirmPassword"
              placeholder="Confirm Password"
              required
            />

            <button class="registerBtn">SIGN UP</button>
          </div>
        </form>
      </div>
      <div class="backgroundColor"></div>
    </div>
  </body>
  <script>
    function showSignUp() {
      const logInDiv = document.querySelector(".login");
      const signUpDiv = document.querySelector(".signUp");
      logInDiv.classList.add("hidden");
      signUpDiv.classList.add("hidden");

      const signUpForm = document.querySelector(".signUpShow");
      const loginPrompt = document.querySelector(".loginShow");
      signUpForm.classList.remove("hidden");
      loginPrompt.classList.remove("hidden");

      const backgroundColor = document.querySelector(".backgroundColor");
      backgroundColor.classList.add("slideLeft");
      backgroundColor.classList.remove("slideRight");
    }

    function showLogin() {
      const signUpForm = document.querySelector(".signUpShow");
      const loginPrompt = document.querySelector(".loginShow");

      signUpForm.classList.add("hidden");
      loginPrompt.classList.add("hidden");

      const loginDiv = document.querySelector(".login");
      const signUpPrompt = document.querySelector(".signUp");
      loginDiv.classList.remove("hidden");
      signUpPrompt.classList.remove("hidden");

      const backgroundColor = document.querySelector(".backgroundColor");
      backgroundColor.classList.remove("slideLeft");
      backgroundColor.classList.add("slideRight");
    }
  </script>
</html>
